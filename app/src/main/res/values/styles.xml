<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_text_default_material_dark</item>
        <item name="android:colorBackground">@color/primary_text_default_material_dark</item>
    </style>
    <style name="ToolBarStyle">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>

        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="rl_labelStyle">
        <item name="android:layout_marginLeft">@dimen/d20</item>
        <item name="android:layout_marginRight">@dimen/d20</item>
        <item name="android:layout_marginTop">@dimen/d5</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/d40</item>
        <item name="android:background">@drawable/shape_text_bg</item>
    </style>


    <style name="textLabel">
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:background">@drawable/shape_text_label_bg</item>

        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/s14</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="textLabel1" parent="textLabel">
        <item name="android:gravity">center</item>

        <item name="android:layout_width">@dimen/d110</item>


    </style>


    <style name="view_divider_style">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">@dimen/d35</item>
        <item name="android:background">@color/layoutstrokecolor</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="editText_shkt">
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">@dimen/d5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/s14</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">@drawable/shape_text_et_bg</item>
    </style>


    <style name="labelTextTheme">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>:
        <item name="android:textColor">@android:color/black</item>


    </style>

    <style name="countTextTitle">
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>"
    <style name="Animations" />
    <!--  这个是加入的代码 -->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="Animations.PopDownMenuRight">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations.PopDownMenuLeft">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.GrowFromBottomRight">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Animations.GrowFromBottom">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>


    <style name="H_dividerView">
        <item name="android:background">@color/background_holo_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
</resources>
