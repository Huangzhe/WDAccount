<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cardView_bankCard"
    app:cardBackgroundColor="@android:color/background_light"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/d10"
    app:contentPaddingTop="@dimen/d5"
    app:contentPaddingBottom="@dimen/d5"
    app:contentPaddingLeft="@dimen/d10"
    app:contentPaddingRight="@dimen/d10"
    android:layout_margin="@dimen/d10"
    android:layout_height="@dimen/d90">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="@dimen/d8"
            android:layout_width="@dimen/d35"
            android:layout_height="@dimen/d35"
            android:src="@mipmap/ic_sub_yhk_re"
            android:id="@+id/iv_icon"
            />
        <TextView
            android:layout_marginTop="@dimen/d8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_marginLeft="@dimen/d10"
            android:id="@+id/tv_bankName"
            android:text="银行"
            android:textSize="@dimen/s18"
            android:textColor="@android:color/black"

            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_marginLeft="@dimen/d10"
            android:id="@+id/tv_cardType"
            android:text="储蓄卡"
            android:layout_below="@+id/tv_bankName"
            android:textSize="@dimen/s14"
            android:textColor="@android:color/black"

            />

        <TextView
            android:layout_marginTop="@dimen/d8"
            android:text="**** **** ****4419"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_marginLeft="@dimen/d10"
            android:id="@+id/tv_cardNo"

            android:layout_below="@+id/tv_cardType"
            android:textSize="@dimen/s14"
            android:textColor="@android:color/black"

            />

    </RelativeLayout>

</android.support.v7.widget.CardView>