<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sh.lynn.huang.wdaccount.ui.CreatPlatformActivity"
    tools:showIn="@layout/activity_creat_platform">



    <RelativeLayout
        style="@style/rl_labelStyle"
        android:layout_marginTop="@dimen/d50" >

        <TextView
            android:id="@+id/tv_name"
            style="@style/textLabel1"
            android:text="平台名称" />

        <View
            android:id="@+id/divder2"
            style="@style/view_divider_style"
            android:layout_toRightOf="@+id/tv_name" />

        <EditText
            android:id="@+id/et_name"
            style="@style/editText_shkt"
            android:layout_toRightOf="@id/divder2"
            />
    </RelativeLayout>
    <RelativeLayout
        style="@style/rl_labelStyle"
        android:layout_marginTop="@dimen/d10" >

        <TextView
            android:id="@+id/tv_address"
            style="@style/textLabel1"
            android:text="平台地址" />

        <View
            android:id="@+id/divder3"
            style="@style/view_divider_style"
            android:layout_toRightOf="@+id/tv_address" />

        <EditText
            android:id="@+id/et_address"
            style="@style/editText_shkt"
            android:layout_toRightOf="@id/divder3"
             />
    </RelativeLayout>

    <RelativeLayout
        style="@style/rl_labelStyle"
        android:layout_marginTop="@dimen/d10" >

        <TextView
            android:id="@+id/tv_loginName"
            style="@style/textLabel1"
            android:text="平台账号" />

        <View
            android:id="@+id/divder4"
            style="@style/view_divider_style"
            android:layout_toRightOf="@+id/tv_loginName" />

        <EditText

            android:id="@+id/et_loginName"
            style="@style/editText_shkt"
            android:layout_toRightOf="@id/divder4"
            />
    </RelativeLayout>


    <TextView
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d20"
        android:layout_marginTop="@dimen/d10"
        android:textSize="@dimen/s14"
        android:textColor="@color/text_Color"
        android:id="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平台描述:" />

    <EditText
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d20"
        android:layout_marginTop="@dimen/d10"
        android:id="@+id/et_describe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d80"
        android:background="@drawable/shape_text_bg"
         />



    <Button
        android:id="@+id/btn_next"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_reg_content"
        android:layout_marginBottom="@dimen/d10"
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d20"
        android:layout_marginTop="@dimen/d30"
        android:background="@drawable/btn_next"
        android:text="保存"
        android:textColor="@android:color/white"
        android:textSize="@dimen/s20" />

</LinearLayout>
